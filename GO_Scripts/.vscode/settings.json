{
    "go.toolsManagement.checkForUpdates": "local",
    "go.useLanguageServer": true,
    "go.buildOnSave": "off",
    "go.lintOnSave": "off", 
    "go.vetOnSave": "off",
    "gopls": {
        "build.directoryFilters": [
            "-**/node_modules",
            "-**/.git"
        ],
        "formatting.gofumpt": true,
        "build.buildFlags": ["-tags="],
        "ui.diagnostic.staticcheck": false
    },
    "go.alternateTools": {
        "go": "go"
    }
}
